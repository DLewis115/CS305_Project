<% provide(:title, "Add and Remove Student's") %>
  <h2>
    Add or Remove Students
  </h2>

<%= link_to "Add Student", add_student_path, class: "btn btn-primary btn-s" %>
<p></p>                                         
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>StudentID</th>
        <th>Date Created</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
        <% @student.each do |student| %>
        <li>
          <tr><td><%= student.name %></td><td><%= student.created_at %></td><td><%= link_to "Remove", add_remove_student_path, method: :toggle, class: "btn btn-danger btn-xs" %></td></tr>
        </li>
        <% end %>
      </ul>
    </tbody>
  </table>
</div>

</body>
</html>