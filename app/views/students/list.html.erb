<% provide(:title, "Add and Remove Student's") %>
  <h2>
    Manage Students
  </h2>

<%= link_to "Add Student", add_student_path, class: "btn btn-primary btn-s" %>
<p></p>
                                           
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>StudentID</th>
        <th>Date Created</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
        <% @student.each do |student| %>
		<% if student.active? %>
        <li>
          <tr><td><%= student.name %></td><td><%= student.created_at %></td><td><%= link_to "Remove", student, method: :delete, class: "btn btn-danger btn-xs" %></td></tr>
        </li>
		<% end %>
        <% end %>
      </ul>
    </tbody>
  </table>
</div>


</body>
</html>
